{
  "name": "enio-node",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "git@github.com:malininja/enio-node.git",
  "author": "Marin Masic <mamasic@gmail.com>",
  "license": "Apache License 2.0",
  "private": false,
  "scripts": {
    "dev": "nodemon ./src/index.js",
    "start": "node ./src/index.js",
    "lint": "eslint --fix ./src/api",
    "seed": "./node_modules/.bin/knex seed:run",
    "precommit": "lint-staged",
    "test": "NODE_ENV=test jest --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage --forceExit"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint-fix",
      "git add"
    ]
  },
  "dependencies": {
    "@canvas-fonts/arial": "^1.0.4",
    "body-parser": "^1.19.0",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "knex": "^0.21.0",
    "nodemon": "^1.19.3",
    "pdfkit": "^0.17.2",
    "pg": "^8.0.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "supertest": "^6.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testTimeout": 30000
  }
}
